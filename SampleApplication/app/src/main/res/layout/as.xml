<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/merchant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAFARI INDUSTRIES INDIA LIMITED(1716)"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#B80808"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/po_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="PO order Date :"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone">

        </TextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />    </LinearLayout>

    <RelativeLayout
        android:id="@+id/voucherCodeContainer"
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtVoucherCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/invoice_number"
            android:text="Invoice Number" />

        <EditText
            android:id="@+id/invoice_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtVoucherCode"
            android:layout_alignBottom="@+id/txtVoucherCode"
            android:layout_alignParentRight="true"
            android:text="INV 00980981" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtVoucherCode2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/invoice_amount"
            android:text="Invoice amount" />

        <EditText
            android:id="@+id/invoice_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtVoucherCode2"
            android:layout_alignBottom="@+id/txtVoucherCode2"
            android:layout_alignParentRight="true"
            android:text=" 00980981" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtVoucherCode3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/invoice_tax_amt"
            android:text="Invoice tax" />

        <EditText
            android:id="@+id/invoice_tax_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtVoucherCode3"
            android:layout_alignBottom="@+id/txtVoucherCode3"
            android:layout_alignParentRight="true"
            android:text=" 00980981" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtVoucherCode4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/invoice_date"
            android:text="Invoice date" />

        <Button
            android:id="@+id/invoice_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtVoucherCode4"
            android:layout_alignBottom="@+id/txtVoucherCode4"
            android:layout_alignParentRight="true"
            android:text=" 00980981" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/invoice_photo_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/invoice_photo_icon"
            android:text="Invoice image" />

        <ImageView
            android:id="@+id/invoice_photo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/invoice_photo_icons"
            android:layout_alignBottom="@+id/invoice_photo_icons"
            android:layout_alignParentRight="true"
            android:text=" 00980981" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Eway_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/eway_txt"
            android:text="Eway Number" />

        <EditText
            android:id="@+id/eway_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Eway_no"
            android:layout_alignBottom="@+id/Eway_no"
            android:layout_alignParentRight="true"
            android:text=" 00980981" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtVoucherCode5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/GSTN_number"
            android:text="GSTN Number" />

        <EditText
            android:id="@+id/GSTN_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtVoucherCode5"
            android:layout_alignBottom="@+id/txtVoucherCode5"
            android:layout_alignParentRight="true"
            android:text=" 00980981" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/grn_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:dividerHeight="16dp" />


        </LinearLayout>


    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"></RelativeLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button_round"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"></Button>
</LinearLayout>