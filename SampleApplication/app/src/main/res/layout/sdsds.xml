<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grey_c8"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FAF7F7"
        android:elevation="3dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAFARI INDUSTRIES INDIA LIMITED(1716)"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#C53C3C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/po_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="PO order Date :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone">

            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/voucherCodeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/txtVoucherCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="23dp"
                android:layout_toLeftOf="@+id/invoice_number"
                android:text="Invoice Number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/invoice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtVoucherCode"
                android:layout_alignBottom="@+id/txtVoucherCode"
                android:layout_alignParentRight="true"
                android:text="INV 00980981"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/txtVoucherCode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="23dp"
                android:layout_toLeftOf="@+id/invoice_amount"
                android:text="Invoice amount"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/invoice_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtVoucherCode2"
                android:layout_alignBottom="@+id/txtVoucherCode2"
                android:layout_alignParentRight="true"
                android:text=" 00980981"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/txtVoucherCode3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="23dp"
                android:layout_toLeftOf="@+id/invoice_tax_amt"
                android:text="Invoice tax"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/invoice_tax_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtVoucherCode3"
                android:layout_alignBottom="@+id/txtVoucherCode3"
                android:layout_alignParentRight="true"
                android:text=" 00980981"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/txtVoucherCode4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="23dp"
                android:layout_toLeftOf="@+id/invoice_date"
                android:text="Invoice date"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/invoice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtVoucherCode4"
                android:layout_alignBottom="@+id/txtVoucherCode4"
                android:layout_alignParentRight="true"
                android:text=" 00980981"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/invoice_photo_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="23dp"
                android:layout_toLeftOf="@+id/invoice_photo_icon"
                android:text="Invoice image"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/invoice_photo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/invoice_photo_icons"
                android:layout_alignBottom="@+id/invoice_photo_icons"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_photo_camera_black_24dp"
                android:text=" 00980981" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/Eway_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="23dp"
                android:layout_toLeftOf="@+id/eway_txt"
                android:text="Eway Number"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/eway_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/Eway_no"
                android:layout_alignBottom="@+id/Eway_no"
                android:layout_alignParentRight="true"
                android:text=" 00980981"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/txtVoucherCode5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/verify_icon"
                android:text="GSTN Number"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/verify_icon"
                android:layout_width="22dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/GSTN_number"
                android:background="@drawable/verified"

                ></ImageView>

            <EditText
                android:id="@+id/GSTN_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/verify_icon"
                android:layout_alignParentRight="true"
                android:text=" 1234567890123456"
                android:textSize="14sp" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/first_layout"
        android:layout_marginBottom="20dp"
        android:background="#F8F6F6"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grn_list"
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:dividerHeight="16dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/second_layout"
        android:background="@color/cb_errorRed"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_round"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#B11F1F"
            android:textSize="15sp"></Button>
    </LinearLayout>


</LinearLayout>