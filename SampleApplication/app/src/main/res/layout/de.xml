<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/merchant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAFARI INDUSTRIES INDIA LIMITED(1716)"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#B80808"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
/>    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Received qty"
                    android:layout_weight="1"
                    android:textSize="15sp"></TextView>

                <EditText
                    android:id="@+id/invoice_number"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:hint="Enter an Invoice number"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Received qty"
                    android:layout_weight="1"
                    android:textSize="15sp"
                   ></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/invoice_amount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="Invoice amount"
                    android:textColor="#EBE4E4"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <EditText
                    android:id="@+id/invoice_amount"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:hint="Enter an Invoice amount"
                    android:inputType="number"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:textColor="#000000"
                    android:textSize="15sp"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/invoice_tax"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#EBE4E4"
                    android:textStyle="bold"
                    android:text="Invoice tax"
                    android:textSize="15sp"
                    >
                </TextView>
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:id="@+id/invoice_tax_amt"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:hint="Enter an Invoice tax"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:textSize="15sp"
                    >
                </EditText>
                <TextView
                    android:id="@+id/po_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="PO order Date :"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone">

                </TextView>

            </LinearLayout>


            <TextView
                android:id="@+id/btnWriteReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="15dp"
                android:paddingBottom="8dp"
                android:text="WRITE A REVIEW"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
</LinearLayout>
