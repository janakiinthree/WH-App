<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="420dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text="Vendor Name "
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/merchant_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text="SAFARI INDUSTRIES INDIA LIMITED(1716)"
                        android:textColor="#0099cc"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/po_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="PO order Date :"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text="Invoice number"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/invoice_number"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"

                        android:layout_marginEnd="25dp"
                        android:background="@drawable/rectangle"
                        android:hint="Enter an Invoice number"
                        android:inputType="number"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:textColor="#000000"
                        android:textSize="15sp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/invoice_amount_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text="Invoice amount"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/invoice_amount"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/rectangle"
                        android:hint="Enter an Invoice amount"
                        android:inputType="numberDecimal"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:textColor="#000000"
                        android:textSize="15sp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/invoice_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text="Invoice tax"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/invoice_tax_amt"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/rectangle"
                        android:hint="Enter an Invoice tax"
                        android:inputType="numberDecimal"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:textColor="#000000"
                        android:textSize="15sp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/invoice_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="25dp"
                        android:text="Invoice date"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/invoice_date"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/ic_date_range_black_24dp"
                        android:hint="Enter an Invoice tax"
                        android:inputType="numberDecimal"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:textColor="#000000"
                        android:textSize="15sp"></EditText>

                    <!--                    <EditText-->
                    <!--                        android:id="@+id/invoice_date"-->
                    <!--                        android:layout_width="236dp"-->
                    <!--                        android:layout_height="35dp"-->
                    <!--                        android:layout_marginStart="25dp"-->
                    <!--                        android:layout_marginLeft="25dp"-->
                    <!--                        android:layout_marginTop="15dp"-->
                    <!--                        android:background="@drawable/rectangle"-->
                    <!--                        android:drawableRight="@drawable/ic_date_range_black_24dp"-->
                    <!--                        android:hint="Enter invoice date"-->
                    <!--                        android:text="Choose date"-->
                    <!--                        android:textAllCaps="false"-->
                    <!--                        android:textColor="#FFFFFF"-->
                    <!--                        android:textSize="15sp"></EditText>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text="Invoice photo"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/invoice_photo_icon"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ic_photo_camera_black_24dp"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text="Eway"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/eway_txt"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle"
                        android:hint="eway_txt"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"></EditText>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text="GSTN :"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <EditText

                        android:id="@+id/GSTN_number"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle"
                        android:hint="Supplier GSTN"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:textColor="#000000"
                        android:textSize="15sp"></EditText>

                    <ImageView
                        android:id="@+id/verify_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/verified"
                        android:visibility="gone"

                        ></ImageView>
                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/grn_list"
                android:dividerHeight="16dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_round"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"></Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>